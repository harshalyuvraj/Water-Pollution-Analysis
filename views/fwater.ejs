    <script>
        // Create floating particles
        function createParticles() {
            const container = document.getElementById('particles');
            const colors = ['rgba(255, 255, 255, 0.6)', 'rgba(200, 230, 255, 0.5)', 'rgba(230, 240, 255, 0.4)'];
            
            for (let i = 0; i < 50; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                particle.style.left = Math.random() * 100 + 'vw';
                particle.style.bottom = -Math.random() * 100 + 'px';
                particle.style.width = Math.random() * 15 + 5 + 'px';
                particle.style.height = particle.style.width;
                particle.style.background = colors[Math.floor(Math.random() * colors.length)];
                particle.style.animationDuration = Math.random() * 20 + 10 + 's';
                particle.style.animationDelay = Math.random() * 10 + 's';
                container.appendChild(particle);
            }
        }
        
        // Background image slideshow for hero section
        function heroSlideshow() {
            const hero = document.querySelector('.hero');
            const images = [
                '/images/bg1.jpg',
                '/images/bg2.jpg',
                '/images/bg3.jpg'
            ];
            let current = 0;
            
            setInterval(() => {
                current = (current + 1) % images.length;
                hero.style.backgroundImage = `linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.4)), url('${images[current]}')`;
            }, 5000);
        }
        
        // Navbar scroll effect
        function navbarScroll() {
            const navbar = document.querySelector('.navbar');
            window.addEventListener('scroll', () => {
                if (window.scrollY > 50) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            });
        }
        
        // Mobile menu toggle
        function mobileMenu() {
            const button = document.getElementById('mobile-menu-button');
            const menu = document.querySelector('.nav-links');
            
            button.addEventListener('click', () => {
                menu.classList.toggle('hidden');
            });
        }
        
        // Smooth scrolling for anchor links
        function smoothScroll() {
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    
                    if (targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 80,
                            behavior: 'smooth'
                        });
                        
                        // Close mobile menu if open
                        document.querySelector('.nav-links').classList.add('hidden');
                    }
                });
            });
        }
        
        // Initialize animations when elements come into view
        function initAnimations() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('animate__animated', 'animate__fadeInUp');
                        observer.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.1 });
            
            document.querySelectorAll('.animate-on-scroll').forEach(element => {
                observer.observe(element);
            });
        }
        
        // Initialize all functions when DOM loads
        document.addEventListener('DOMContentLoaded', () => {
            createParticles();
            heroSlideshow();
            navbarScroll();
            mobileMenu();
            smoothScroll();
            initAnimations();
        });


        // gallery image

        document.addEventListener('DOMContentLoaded', function() {
            const galleryTrack = document.querySelector('.gallery-track');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            
            // Water pollution images with captions
            const slides = [
                {
                    image: '/images/pollu1.jpg',
                    caption: 'Drain water Gate 2 IIT KGP'
                },
                {
                    image: '/images/pollu2.jpg',
                    caption: 'Gate 2 IIT KGP'
                },
                {
                    image: '/images/pollu3.jpg',
                    caption: 'Chemical Reagent Lab'
                },
                {
                    image: '/images/pollu4.jpg',
                    caption: 'Near to Food Studio '
                },
                {
                    image: '/images/pollu5.jpg',
                    caption: 'Urban sewage polluting Drain'
                },
                {
                    image: '/images/pollu1.jpg',
                    caption: 'Drain water Gate 2 IIT KGP'
                },
                {
                    image: '/images/pollu2.jpg',
                    caption: 'Gate 2 IIT KGP'
                },
                {
                    image: '/images/pollu3.jpg',
                    caption: 'Chemical Reagent Lab'
                }
            ];
            
            // Create slides
            slides.forEach((slide, index) => {
                const slideElement = document.createElement('div');
                slideElement.className = 'gallery-slide';
                slideElement.innerHTML = `
                    <img src="${slide.image}" alt="Water pollution image ${index + 1}">
                    <div class="slide-caption">${slide.caption}</div>
                `;
                galleryTrack.appendChild(slideElement);
            });
            
            // Clone first and last slides for infinite loop
            const firstSlide = galleryTrack.firstElementChild.cloneNode(true);
            const lastSlide = galleryTrack.lastElementChild.cloneNode(true);
            
            galleryTrack.appendChild(firstSlide);
            galleryTrack.insertBefore(lastSlide, galleryTrack.firstElementChild);
            
            let currentIndex = 1;
            const slideCount = slides.length;
            const slideWidth = 100; // Percentage
            
            // Position the gallery at the first real slide
            galleryTrack.style.transform = `translateX(-${currentIndex * slideWidth}%)`;
            
            // Auto slide every 5 seconds
            let autoSlide = setInterval(nextSlide, 5000);
            
            function nextSlide() {
                currentIndex++;
                galleryTrack.style.transition = 'transform 0.5s ease-in-out';
                galleryTrack.style.transform = `translateX(-${currentIndex * slideWidth}%)`;
                
                // If we've reached the cloned first slide, reset without animation
                if (currentIndex === slideCount + 1) {
                    setTimeout(() => {
                        galleryTrack.style.transition = 'none';
                        currentIndex = 1;
                        galleryTrack.style.transform = `translateX(-${currentIndex * slideWidth}%)`;
                    }, 500);
                }
                
                resetAutoSlide();
            }
            
            function prevSlide() {
                currentIndex--;
                galleryTrack.style.transition = 'transform 0.5s ease-in-out';
                galleryTrack.style.transform = `translateX(-${currentIndex * slideWidth}%)`;
                
                // If we've reached the cloned last slide, reset without animation
                if (currentIndex === 0) {
                    setTimeout(() => {
                        galleryTrack.style.transition = 'none';
                        currentIndex = slideCount;
                        galleryTrack.style.transform = `translateX(-${currentIndex * slideWidth}%)`;
                    }, 500);
                }
                
                resetAutoSlide();
            }
            
            function resetAutoSlide() {
                clearInterval(autoSlide);
                autoSlide = setInterval(nextSlide, 5000);
            }
            
            // Button event listeners
            nextBtn.addEventListener('click', nextSlide);
            prevBtn.addEventListener('click', prevSlide);
            
            // Touch support for mobile devices
            let touchStartX = 0;
            let touchEndX = 0;
            
            galleryTrack.addEventListener('touchstart', (e) => {
                touchStartX = e.changedTouches[0].screenX;
            }, {passive: true});
            
            galleryTrack.addEventListener('touchend', (e) => {
                touchEndX = e.changedTouches[0].screenX;
                handleSwipe();
            }, {passive: true});
            
            function handleSwipe() {
                if (touchEndX < touchStartX - 50) {
                    nextSlide();
                }
                if (touchEndX > touchStartX + 50) {
                    prevSlide();
                }
            }
        });
