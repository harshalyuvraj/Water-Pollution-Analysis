<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biological Parameters</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/biological.css">
</head>

<body class="bg-gray-100">
    <!-- Back to Home Button -->
    <div class="back-button-container mb-4">
        <button class="back-button px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600" onclick="goBackHome()">&#8592; Back to Home</button>
    </div>

    <div class="container mx-auto p-6">
        <h2 class="text-3xl font-bold text-gray-700 mb-6">Biological Parameters</h2>

        <!-- Form Box -->
        <div class="bg-white shadow-md rounded-lg p-6">
            <form class="grid grid-cols-1 sm:grid-cols-2 gap-6" id="biological-parameters-form" onsubmit="saveFormData(event)">
                <!-- Sample ID -->
                <div class="form-group">
                    <label for="sampleID" class="block text-gray-700 font-semibold mb-2">Sample ID</label>
                    <input type="text" id="sampleID" name="sampleID" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter Sample ID">
                </div>

                <!-- Coliform Bacteria -->
                <div class="form-group">
                    <label for="coliform" class="block text-gray-700 font-semibold mb-2">Coliform Bacteria (MPN/100mL)</label>
                    <input type="number" step="0.01" id="coliform" name="coliform" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter Coliform Bacteria Count">
                </div>

                <!-- Fecal Coliform -->
                <div class="form-group">
                    <label for="fecalColiform" class="block text-gray-700 font-semibold mb-2">Fecal Coliform (MPN/100mL)</label>
                    <input type="number" step="0.01" id="fecalColiform" name="fecalColiform" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter Fecal Coliform Count">
                </div>

                <!-- Algal Count -->
                <div class="form-group">
                    <label for="algalCount" class="block text-gray-700 font-semibold mb-2">Algal Count (cells/mL)</label>
                    <input type="number" step="0.01" id="algalCount" name="algalCount" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter Algal Count">
                </div>

                <!-- Pathogens -->
                <div class="form-group">
                    <label for="pathogens" class="block text-gray-700 font-semibold mb-2">Pathogens (MPN/100mL)</label>
                    <input type="number" step="0.01" id="pathogens" name="pathogens" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter Pathogen Count">
                </div>

                <!-- Save and Reset Buttons -->
                <div class="form-group sm:col-span-2 flex justify-between">
                    <button type="submit" class="save-button w-full sm:w-auto py-2 px-4 bg-green-500 text-white rounded-lg hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300">Save</button>
                    <button type="reset" class="reset-button w-full sm:w-auto py-2 px-4 bg-gray-500 text-white rounded-lg hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300">Reset</button>
                </div>
            </form>
        </div>
    </div>

    <!-- JavaScript for Back Button and Save Function -->
    <script>
        function goBackHome() {
            window.location.href = 'fwater'; // Adjust this URL as necessary
        }

        function saveFormData(event) {
            event.preventDefault(); // Prevent the default form submission

            const sampleID = document.getElementById('sampleID').value;
            const coliform = document.getElementById('coliform').value;
            const fecalColiform = document.getElementById('fecalColiform').value;
            const algalCount = document.getElementById('algalCount').value;
            const pathogens = document.getElementById('pathogens').value;

            if (sampleID && coliform && fecalColiform && algalCount && pathogens) {
                // Use Fetch API to submit the data to the server
                fetch('/biological', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        sampleID,
                        coliform,
                        fecalColiform,
                        algalCount,
                        pathogens
                    })
                })
                .then(response => {
                    if (response.ok) {
                        alert('Data saved successfully!');
                        document.getElementById('biological-parameters-form').reset();
                        window.location.href = '/fwater'; // Redirect after successful save
                    } else {
                        alert('Error saving data');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error saving data');
                });
            } else {
                alert('Please fill in all fields before saving.');
            }
        }
    </script>
</body>

</html>
