<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Physical Parameters</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/physical.css">
</head>

<body class="bg-gray-100">
    <!-- Back to Home Button -->
    <div class="back-button-container">
        <button class="back-button" onclick="goBackHome()">&#8592; Back to Home</button>
    </div>

    <div class="container mx-auto p-6">
        <h2 class="text-3xl font-bold text-gray-700 mb-6">Physical Parameters</h2>

        <!-- Form Box -->
        <div class="bg-white shadow-md rounded-lg p-6">
            <form class="grid grid-cols-1 sm:grid-cols-2 gap-6" id="physical-parameters-form" onsubmit="saveFormData(event)">
                <!-- Sample ID -->
                <div class="form-group">
                    <label for="sampleID" class="block text-gray-700 font-semibold mb-2">Sample ID</label>
                    <input type="text" id="sampleID" name="sampleID" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter Sample ID">
                </div>

                <!-- PH Value -->
                <div class="form-group">
                    <label for="phValue" class="block text-gray-700 font-semibold mb-2">PH Value</label>
                    <input type="number" step="0.01" id="phValue" name="phValue" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter PH Value">
                </div>

                <!-- Temperature -->
                <div class="form-group">
                    <label for="temperature" class="block text-gray-700 font-semibold mb-2">Temperature (°C)</label>
                    <input type="number" step="0.01" id="temperature" name="temperature" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter Temperature">
                </div>

                <!-- Turbidity -->
                <div class="form-group">
                    <label for="turbidity" class="block text-gray-700 font-semibold mb-2">Turbidity (NTU)</label>
                    <input type="number" step="0.01" id="turbidity" name="turbidity" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter Turbidity">
                </div>

                <!-- Conductivity -->
                <div class="form-group">
                    <label for="conductivity" class="block text-gray-700 font-semibold mb-2">Conductivity (µS/cm)</label>
                    <input type="number" step="0.01" id="conductivity" name="conductivity" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter Conductivity">
                </div>

                <!-- Total Dissolved Solids (TDS) -->
                <div class="form-group">
                    <label for="tds" class="block text-gray-700 font-semibold mb-2">Total Dissolved Solids (TDS)</label>
                    <input type="number" step="0.01" id="tds" name="tds" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" placeholder="Enter TDS">
                </div>

                <!-- Save and Reset Buttons -->
                <div class="form-group sm:col-span-2 flex justify-between">
                    <button type="submit" class="save-button w-full sm:w-auto py-2 px-4 bg-green-500 text-white rounded-lg hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300">Save</button>
                    <button type="reset" class="reset-button w-full sm:w-auto py-2 px-4 bg-gray-500 text-white rounded-lg hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300">Reset</button>
                </div>
            </form>
        </div>
    </div>

    <!-- JavaScript for Back Button, Save, and Reset -->
    <script>
        function goBackHome() {
            window.location.href = '/fwater'; // Assuming /fwater is the home page URL
        }

        function saveFormData(event) {
            event.preventDefault(); // Prevent the default form submission

            const sampleID = document.getElementById('sampleID').value;
            const phValue = document.getElementById('phValue').value;
            const temperature = document.getElementById('temperature').value;
            const turbidity = document.getElementById('turbidity').value;
            const conductivity = document.getElementById('conductivity').value;
            const tds = document.getElementById('tds').value;

            if (sampleID && phValue && temperature && turbidity && conductivity && tds) {
                // Use Fetch API to submit the data to the server
                fetch('/physical', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        sampleID,
                        phValue,
                        temperature,
                        turbidity,
                        conductivity,
                        tds
                    })
                })
                .then(response => {
                    if (response.ok) {
                        alert('Data saved successfully!');
                        document.getElementById('physical-parameters-form').reset();
                        window.location.href = '/fwater'; // Redirect after successful save
                    } else {
                        alert('Error saving data');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error saving data');
                });
            } else {
                alert('Please fill in all fields before saving.');
            }
        }
    </script>
</body>

</html>
